<Window x:Class="QuackOSD.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Impostazioni QuackOSD" 
        Height="450" Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Impostazioni" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <TabControl Grid.Row="1" Margin="0,0,0,20">

            <TabItem Header="Generale">
                <StackPanel Margin="20">
                    <GroupBox Header="Posizione e Margini" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <RadioButton x:Name="TopLeftRadio" Content="↖ Alto Sinistra" Grid.Row="0" Grid.Column="0" Checked="PositionRadio_Checked"/>
                            <RadioButton x:Name="TopRightRadio" Content="↗ Alto Destra" Grid.Row="0" Grid.Column="2" Checked="PositionRadio_Checked"/>
                            <RadioButton x:Name="BottomLeftRadio" Content="↙ Basso Sinistra" Grid.Row="2" Grid.Column="0" Checked="PositionRadio_Checked"/>
                            <RadioButton x:Name="BottomRightRadio" Content="↘ Basso Destra" Grid.Row="2" Grid.Column="2" Checked="PositionRadio_Checked"/>

                            <TextBlock Text="↔ H:" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="MarginHBox" Grid.Row="0" Grid.Column="5" VerticalContentAlignment="Center" TextChanged="MarginBox_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
                            <Button x:Name="ResetHButton" Grid.Row="0" Grid.Column="7" Content="↺" Width="25" Height="25" Click="ResetHButton_Click" ToolTip="Resetta a 10"/>

                            <TextBlock Text="↕ V:" Grid.Row="2" Grid.Column="4" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="MarginVBox" Grid.Row="2" Grid.Column="5" VerticalContentAlignment="Center" TextChanged="MarginBox_TextChanged" PreviewTextInput="NumberValidationTextBox"/>
                            <Button x:Name="ResetVButton" Grid.Row="2" Grid.Column="7" Content="↺" Width="25" Height="25" Click="ResetVButton_Click" ToolTip="Resetta a 10"/>

                        </Grid>
                    </GroupBox>
                </StackPanel>
            </TabItem>

            <TabItem Header="Contenuti">
                <StackPanel Margin="20">
                    <GroupBox Header="Elementi Visibili" Padding="10" Margin="0,0,0,20">
                        <StackPanel>
                            <CheckBox x:Name="ShowCoverCheck" Content="Mostra Copertina Album" Margin="0,0,0,10" Checked="ContentCheck_Changed" Unchecked="ContentCheck_Changed"/>
                            <CheckBox x:Name="ShowTitletCheck" Content="Mostra Titolo Brano" Margin="0,0,0,10" Checked="ContentCheck_Changed" Unchecked="ContentCheck_Changed"/>
                            <CheckBox x:Name="ShowArtistCheck" Content="Mostra Nome Artista" Margin="0,0,0,10" Checked="ContentCheck_Changed" Unchecked="ContentCheck_Changed"/>
                            <CheckBox x:Name="ShowControlsCheck" Content="Mostra Pulsanti di Controllo" Margin="0,0,0,10" Checked="ContentCheck_Changed" Unchecked="ContentCheck_Changed"/>
                            <CheckBox x:Name="ShowTimeLineCheck" Content="Show Time Line" Checked="ContentCheck_Changed" Unchecked="ContentCheck_Changed"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Dimensione OSD" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Zoom:" VerticalAlignment="Center"/>
                            <Slider x:Name="ScaleSlider" Grid.Column="1" Margin="10,0" Minimum="0.5" Maximum="2.0" TickFrequency="0.1" IsSnapToTickEnabled="True" ValueChanged="ScaleSlider_ValueChanged"/>
                            <TextBlock x:Name="ScaleValueText" Text="100%" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </TabItem>

            <TabItem Header="Animations">
                <StackPanel Margin="20">

                    <GroupBox Header="Visibility Duration" Padding="10" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Remain visible for:" VerticalAlignment="Center" Grid.Column="0"/>
                            <TextBox x:Name="DurationBox" Grid.Column="2" VerticalContentAlignment="Center" PreviewTextInput="NumberValidationTextBox" TextChanged="DurationBox_TextChanged"/>
                            <TextBlock Text="Seconds" VerticalAlignment="Center" Grid.Column="4"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Enter/Exit Animations" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Type" FontWeight="SemiBold" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center"/>
                            <TextBlock Text="Duration" FontWeight="SemiBold" Grid.Row="0" Grid.Column="6" HorizontalAlignment="Center"/>

                            <TextBlock Text="Enter:" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                            <ComboBox x:Name="AnimInCombo" Grid.Row="2" Grid.Column="2" SelectionChanged="AnimCombo_SelectionChanged">
                                <ComboBoxItem Content="None" Tag="None"/>
                                <ComboBoxItem Content="Fade" Tag="Fade"/>
                                <ComboBoxItem Content="Vertical Slide" Tag="SlideY"/>
                                <ComboBoxItem Content="Horizontal Slide" Tag="SlideX"/>
                            </ComboBox>
                            <TextBlock Text="Duration:" VerticalAlignment="Center" Grid.Row="2" Grid.Column="4" HorizontalAlignment="Right"/>
                            <TextBox x:Name="AnimInDurationBox" Grid.Row="2" Grid.Column="6" VerticalContentAlignment="Center" PreviewTextInput="NumberValidationTextBox" TextChanged="AnimDuration_TextChanged"/>
                            <TextBlock Text="ms" VerticalAlignment="Center" Grid.Row="2" Grid.Column="8"/>

                            <TextBlock Text="Exit:" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"/>
                            <ComboBox x:Name="AnimOutCombo" Grid.Row="4" Grid.Column="2" SelectionChanged="AnimCombo_SelectionChanged">
                                <ComboBoxItem Content="None" Tag="None"/>
                                <ComboBoxItem Content="Fade" Tag="Fade"/>
                                <ComboBoxItem Content="Vertical Slide" Tag="SlideY"/>
                                <ComboBoxItem Content="Horizontal Slide" Tag="SlideX"/>
                            </ComboBox>
                            <TextBlock Text="Duration:" VerticalAlignment="Center" Grid.Row="4" Grid.Column="4" HorizontalAlignment="Right"/>
                            <TextBox x:Name="AnimOutDurationBox" Grid.Row="4" Grid.Column="6" VerticalContentAlignment="Center" PreviewTextInput="NumberValidationTextBox" TextChanged="AnimDuration_TextChanged"/>
                            <TextBlock Text="ms" VerticalAlignment="Center" Grid.Row="4" Grid.Column="8"/>

                        </Grid>
                    </GroupBox>

                </StackPanel>
            </TabItem>

            <TabItem Header="Aspetto">
                <Grid>
                    <TextBlock Text="Opzioni colori in arrivo..." HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                </Grid>
            </TabItem>

        </TabControl>

        <Button Grid.Row="2" Content="Chiudi" Width="100" Height="30" HorizontalAlignment="Right" Click="CloseButton_Click"/>
    </Grid>
</Window>